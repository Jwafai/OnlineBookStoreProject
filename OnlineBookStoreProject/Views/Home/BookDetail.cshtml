@model OnlineBookStoreProject.Models.Domain.Book
@{
}
<section class="container">
    <div class="book-detail w-80 m-auto">
        <div class="img-container">
            <img alt="image" src="/Uploads/@(Model.BookImage)" style="width: 500px; height: 500px;">
        </div>

        <div class="detail-container">
            <h4>Book Name:@Model.BookName</h4>
            <h4>Realsed Year:@Model.RealeaseYear </h4>
            <h4>Book Price:@Model.Price </h4>

        </div>
    </div>
    <div class="w-80 m-auto">
        <a href="/Home/Index" class="btn btn-default">Back</a>
    </div>

</section>